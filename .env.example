# Campaign Stack Configuration Template
# Copy this to .env and fill in your values

# Your campaign domain
DOMAIN=yourdomain.com

# Email for SSL certificates
LETSENCRYPT_EMAIL=your-email@example.com

# MySQL (generate strong passwords)
MYSQL_ROOT_PASSWORD=generate_secure_password_here
MYSQL_USER=wordpress_user
MYSQL_PASSWORD=generate_secure_password_here
MYSQL_DATABASE=wordpress_db

# Storj Backup Configuration (optional, set up after deployment)
STORJ_ACCESS_GRANT=
STORJ_BUCKET=campaign-backups-production

